<%- include("partials/header") %> 
<h1>Compose</h1>
<div class="form-group">
<form class="post" action="/compose" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input id="title" class="form-control" type="text" name="postTxt">
    </div>
    <div class="form-group">
        <label for="day">Post</label>
        <textarea  class="form-control" name="blogArea" id="day" cols="150" rows="10"></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary" type="submit" name="postBtn"> Publish </button>
    </div>
    
    
    
</form>
</div>
